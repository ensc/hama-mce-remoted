SUBSYSTEM=="input", DEVPATH=="*/event*", ATTRS{name}=="HID 05a4:9881", GOTO="hama-mce"

GOTO="hama-mce-end"
LABEL="hama-mce"

# trigger on second input device; that assumes that the first has been
# created already
ATTRS{phys}=="*/input1", \
  TAG+="systemd", ENV{SYSTEMD_READY}="1", \
  IMPORT{program}="hamaid", \
  ENV{SYSTEMD_WANTS}="hama-mce-remoted@$env{HAMA_EVENTS}.service"

LABEL="hama-mce-end"
